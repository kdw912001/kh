	<insert id="insertNotice" parameterType="Notice">
	<choose>
	<when test="originalFilePath == null">
		insert into notice (noticeno, noticetitle, noticedate,
				noticewriter, noticecontent)
		values ((select max(noticeno) + 1 from notice), 
				#{noticeTitle}, default, #{noticeWriter}, 
				#{noticeContent})
	</when>	
	<otherwise>
		insert into notice
		values ((select max(noticeno) + 1 from notice), 
				#{noticeTitle}, default, #{noticeWriter}, 
				#{noticeContent}, #{originalFilePath}, 
				#{renameFilePath})
	</otherwise>
	</choose>				
	</insert>
	
	<sql id="filepath">
		<if test="originalFilePath != null">
			, original_filepath = #{originFilePath}, 
			rename_filepath = #{renameFilePath}
		</if>
	</sql>
	
	<update id="updateNotice" parameterType="Notice">
		update notice 
		set 	noticetitle = #{noticeTitle}, 
			noticecontent = #{noticeContent} 
			<include refid="filepath" />
		where noticeno = #{noticeNo}
	</update>
	
	<delete id="deleteNotice" parameterType="_int">
		delete from notice 
		where noticeno = #{noticeNo}
	</delete>
	
</mapper>





