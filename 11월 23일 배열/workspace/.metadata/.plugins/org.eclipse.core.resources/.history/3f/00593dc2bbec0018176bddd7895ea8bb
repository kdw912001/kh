package loop.sample;

import java.util.Scanner;

public class DoWhileSample {
	
	//화면에 메뉴를 출력하고
	//메뉴번호를 입력받아 
	//번호에 따라 기능이 작동되게 처리
	//번호가 7이면 반복 종료됨.
	public void testDoWhile1() {
		Scanner sc = new Scanner(System.in);
		int menuNo;
		
		do {
			System.out.println("*** 주문메뉴 ***");
			System.out.println();
			System.out.println("1. 추가");
			System.out.println("2. 수정");
			System.out.println("3. 조회");
			System.out.println("4. 삭제");
			System.out.println("5. 출력");
			System.out.println("7. 종료");
			System.out.print("번호 선택 : ");
			menuNo = sc.nextInt();
			
			switch(menuNo) {
			case 1: 	System.out.println("추가되었습니다.");
					  	break;
			case 2: 	System.out.println("수정되었습니다.");
					  	break;
			case 3: 	System.out.println("조회되었습니다.");
					  	break;
			case 4: 	System.out.println("삭제되었습니다.");
			   			break;
			case 5: 	System.out.println("출력되었습니다.");
					  	break;
			case 7:	System.out.println("종료합니다.");
			  			break;
			default:	System.out.println("잘못 입력하였습니다.");
						System.out.println("다시 입력하십시오.");
			}
		}while(menuNo != 7);
	}
	
	
	//반복문 실습문제3
	public void testDoWhile2() {
		char ch;
		String str = " ";
		String stringSum = " ";
		int resultSum = 0;
		String name = " ";
		int price = 0;
		Scanner sc = new Scanner(System.in);
		do {
			
			System.out.print("\r\n" + 
					"	햄버거 ***************\r\n" + 
					"	1. 불고기버거	3500원\r\n" + 
					"	2. 치킨버거	3200원\r\n" + 
					"	추가 ****************\r\n" + 
					"	3. 감자튀김	1000원\r\n" + 
					"	4. 치즈스틱	400원\r\n" + 
					"	5. 샐러드		2000원\r\n" + 
					"	음료수 ***************\r\n" + 
					"	6. 콜라		700원\r\n" + 
					"	7. 에이드		1200원\r\n" + 
					"	8. 커피		1000원\r\n" + 
					"	********************\r\n" + 
					"	메뉴 선택 : ");
			
			int menuNo = sc.nextInt();
			
			switch(menuNo) {
			case 1:	name="불고기버거"; price=3500;
						break;
			case 2:	name="치킨버거"; price=3200;
						break;
			case 3:	name="감자튀김"; price=1000;
						break;
			case 4:	name="치즈스틱"; price=400;
						break;
			case 5:	name="샐러드"; price=2000;
						break;
			case 6:	name="콜라"; price=700;
						break;
			case 7:	name="에이드"; price=1200;
						break;
			case 8:	name="커피"; price=1000;
						break;
			default: 	System.out.println("잘못 입력하셨습니다");
						System.out.println("다시 입력해주세요.");
			}
			System.out.println(name+"을/를 선택하셨습니다.");
			System.out.print("수량은 ? ");
			int count = sc.nextInt();
			int result = price*count;
			str = name+" : "+count+"개 - "+result+"원\n";
			stringSum +=str;
			resultSum +=result;
			
			System.out.print("추가 주문하시겠습니까?(y/n) : ");
			
			//y 입력시 메뉴화면 반복실행됨
		}while (sc.next().toUpperCase().charAt(0) == 'Y');
			/*내가 작성한거
			 * ch = sc.next().charAt(0);
			if(ch!='y'&&ch!='n') {
				System.out.println("잘못 입력하셨습니다.");
				System.out.println("다시 입력해주세요.");
			}					
		}while(ch !='n');*/
		System.out.println("* 주문하신 정보는 다음과 같습니다. *");
		System.out.println("-----------------------------------");
		System.out.println(stringSum);
		System.out.println("-----------------------------------");
		System.out.println("총 가격  : "+resultSum+"원");

	}
	//문자 하나 입력받아, 유니코드 출력
	//반복 실행함
	//'0'문자 입력되면, 반복 종료
	public void testDoWhild3() {
		Scanner sc = new Scanner(System.in);
		char ch;
		int unicode;
		do {
			System.out.print("문자 하나 입력 : ");
			ch = sc.next().charAt(0);
			System.out.println(ch+"->"+(int)ch);
		}while(ch!='0');
	}
	
	//문자열 입력받고, 기호문자 입력받아
	//문자열의 글자 사이사이 기호문자가
	//끼워져서 출력 do~while 사용
	//예> apple, - =>a-p-p-l-e
	//charAt하나 문자하나 출력
	public void testDoWhild4() {
		Scanner sc = new Scanner(System.in);
		int i= 0;
		System.out.print("문자열 입력 : ");
		String str = sc.next();
		System.out.print("기호문자 입력 : ");
		char ch = sc.next().charAt(0);
		do {
				
			System.out.print(str.charAt(i));
		
			i++;
			if(str.length()==i) {
				break;
			}
			System.out.print(ch);
		}while(str.length()>i);
		
	}
}
