package logic.home.model;

import java.util.Scanner;

public class VariableSample {
	private Scanner sc = new Scanner(System.in);
	public void myProfile() { //내 신상정보 변수에 담아 출력
		System.out.print("이름 입력 : ");
		String name =sc.next();
		System.out.print("나이 입력 : ");
		int age = sc.nextInt();
		System.out.print("키를 입력 : ");
		double height = (int)(sc.nextDouble()*10)/10.0;//소수 첫째자리까지
		System.out.print("핸드폰 번호 입력 : ");
		String phone = sc.next();
		
		System.out.println(name+"의 나이는 "+age+"세 이고, 키는"+height+"cm이다.\n"+"핸드폰 번호 : "+phone);
	}
	public void emplnformation() { //사원정보
		System.out.print("이름 입력 : ");
		String name =sc.next();
		System.out.print("부서 입력 : ");
		String part = sc.next();
		System.out.print("키를 입력 : ");
		double height = (int)(sc.nextDouble()*10)/10.0;//소수 첫째자리까지
		System.out.print("핸드폰 번호 입력 : ");
		String phone = sc.next();
		
		System.out.println(name+"의 부서 : "+part+", 키 : "+height+"cm이다."+"핸드폰 번호 : "+phone);
		
	}
	public void defaultValue() {//기본 자료형 변수의 초기값 확인
		boolean bo=true;
		short sh = 10;
		byte by = 5;
		int in = 10;
		long lo = 60;
		float fl = 10.1f;
		double dou = 10.1;
		char ch = 'a';
		String st = "kh학원";
		System.out.println(bo);
		System.out.println(sh);
		System.out.println(in);
		System.out.println(fl);
		System.out.println(dou);
		System.out.println(ch);
		System.out.println(st);
		

		
		
	}
	
}
