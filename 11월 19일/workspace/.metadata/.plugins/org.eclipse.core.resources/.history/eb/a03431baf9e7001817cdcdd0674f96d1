package com.loop.operator;
import java.util.*;

public class ForWhile{
	
	public void printStar1() {
		System.out.print("정수 하나 입력 : ");
		int a=new Scanner(System.in).nextInt();
		
		if(a>0)
			for(int i=1; i<=a; i++) {
				System.out.println(i);
				for(int j=0; j<i;j++) {
					if(i==a)
						break;
					else
						System.out.print("*");
				}
			}
		else
			System.out.println("양수가 아닙니다.");
			
	}
	
	public void printStar2() {
		System.out.print("정수 입력 : ");
		int a = new Scanner(System.in).nextInt();
		if(a>0)
			for(int i=0; i<a; i++)
			{
				
				for(int j=0; j<=i; j++) {
					System.out.print("*");
				}
				System.out.println();
			}
		else if(a==0)
		{
			System.out.print("출력 기능이 없습니다.");
		}
		else
		{
			for(int i=0;i<a;i++) {
				for (int j=0; j<a-i;j++) {
				System.out.print("*");
				
				}
				System.out.println(" ");
			}
		}
	}
}

