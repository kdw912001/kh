package com.loop.operator;
import java.util.*;

public class ForWhile{
	
	public void printStar1() {
		System.out.print("정수 하나 입력 : ");
		int a=new Scanner(System.in).nextInt();
		
		if(a>0)
			for(int i=0; i<=a; i++) {
				
				for(int j=0; j<i;j++) {
					System.out.println(i);
					System.out.print("*");
				}
			}
		else
			System.out.println("양수가 아닙니다.");
			
	}
}

