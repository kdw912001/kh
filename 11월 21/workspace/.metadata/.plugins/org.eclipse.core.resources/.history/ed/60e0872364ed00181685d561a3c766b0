package loop.sample;

public class ContinueSample {
	//1~100까지 정수들의 합을 구해서 출력
	//단, 3의 배수는 제외하고 계산
	public void testContinue1() {
		int sum = 0;
		
		for(int k = 1; k<101; k++) {
			if(k%3==0)
				continue;
			System.out.print(k+"+");
			sum +=k;
			
		}
		System.out.println("1~100까지 3의 배수를 제외한 정수들의 합계 : "+sum);
	}
}
